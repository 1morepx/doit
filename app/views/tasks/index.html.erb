<%= link_to 'new', new_task_path %>

<table class="table">
  <thead>
    <th></th>
    <th>Task</th>
    <th>Due date</th>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= check_box_tag :completed, nil, task.completed? %></td>
      <td><%= task.title %></td>
      <td><%= task.due_date %></td>
    </tr>
    <% end %>
  </tbody>
</table>
